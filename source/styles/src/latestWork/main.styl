.latestWork
	margin-top: 29px;
	display: grid;
	grid-template-rows: 100%;
	grid-template-columns: repeat(4,225px);
	grid-column-gap: 20px;
	text-align: left;
	&__block
		
		&-title
			color: grey;
			padding-bottom: 16px;
		&-img
			width: 225px;
			height: 140px;
			background-color: grey;
		&-text
			margin-top: 17px;
			color: lightGrayText;
			line-height: 21px;
			font-size: 13px;
			
		&-readMore
			margin: 10px 0 0px 0;
			a
				color: grey;
				font-size: 15px;
			
.footer
	display: grid;
	grid-template-columns: 360px 415px;
	grid-column-gap: 130px;
	
	
	.footerLeft
		display: grid;
		grid-template-columns: 220px 140px;
		grid-column-gap: 27px;
		

		&__block
			width: 100%;
			.title
				display: block;
				font-size: 16px;
				color: white;
				margin: 28px 0;
			&-title
				span
					display: block;
					font-size: 10px;
					color: lightGrayText;
				span:first-of-type
					color: footerfiolet;
					font-size: 14px;
			
			&-text
				margin-top: 8px;
				
				span
					color: lightGrayText;
					font-size: 10px;
			ul
				margin: 0;
				padding: 0;
				height: 150px;
				margin-left: 10px;
				margin-top: -5px;
				li
					list-style: none; 
					position: relative;
							
					&:not(:first-of-type)
						margin-top: 5px;
					a
						font-size: 12px;
						color: footerfiolet;
					
					&:after
						content: 'Â«';
						transform: rotate(180deg);
						position: absolute;
						top: calc(50% + 0px);
						// margin: auto 0;
						left: -15px;
						font-size: 10px;
						letter-spacing: -2px;
						width: 10px;
						height: 10px;
						color: white;								
	
	.footerRight
		display: grid;
		grid-template-columns: 190px 225px;
		grid-column-gap: 55px;
	
		&__block
			width: 100%;
			.title
				display: block;
				font-size: 16px;
				color: white;
				margin: 28px 0;
				
			ul
				list-style: none;
				padding: 0;
				font-size: 12px;
				color: lightGrayText;
				
				li:not(:first-of-type)
					margin-top: 4px;
			&-text
				margin-top: 16px;
				font-size: 11px;
				color: lightGrayText;
				
				span
					margin-top: 5px;
				span:nth-child(1), span:nth-child(2) 
					display: block;
				
				.email
					display: inline;
					color: fiolet;
			form
				border: none;
				input
					margin-bottom: 10px;
					border: none;
					background-color: inputGrey;
					padding: 10px;
					font-size: 10px;
					color: lightGrayText;
					border-radius: 5%;
					width: 205px;
					height: 11px;
					
				button
					border-radius: 5%;
					border: none;
					background-color: #9f81a9;
					font-size: 14px;
					color: white;
					text-transform: uppercase;
					width: 80px;
					height: 31px;
					display: flex;
					letter-spacing: 1px;
					justify-content: center;
					align-items: center;
			
			&-soc
				margin-top: 22px;
				a
					margin-right: 10px;
					img
						border-radius: 50%;
						width: 32px;
						height: 32px;
								
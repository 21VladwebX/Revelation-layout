.slider
	&-sliders
		height: 420px;
		width: 100%;
		
		&__content 
			height: 100%;
			display: grid;
			grid-template-rows: 100%;
			grid-template-columns: 487px 385px;
			grid-column-gap: 88px;
		
			&-left
				height: 388px;
				padding: 16px 0;
				img
					height: 100%;
					width: 100%;
			
			&-right
				padding-top: 141px;
				text-align: left;
				padding-bottom: 95px;
				
				h2
					font-size: 26px;
					color: GrayText;
					text-transform: uppercase;
				
				span
					color: mediumGrayText;
					font-size: 12px;
					line-height: 14px;
				a 
					display: block
					width: fit-content;
					color: white;
					text-transform: uppercase;
					padding: 10px;
					border-radius: 5px;
					margin-top: 21px;
					background-color: fiolet;		
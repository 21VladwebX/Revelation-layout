.slider
	&-sliders
		height: 420px;
		width: 100%;
		
		&__content 
			height: 100%;
			display: grid;
			grid-template-rows: 100%;
			grid-template-columns: 487px 385px;
			grid-column-gap: 88px;
		
			&-left
				height: 388px;
				width: 100%;
				margin: 26px 0 0 0px;
				
				img
					height: 100%;
					width: 100%;
			
			&-right
				padding-top: 110px;
				text-align: left;
				padding-bottom: 95px;
				
				
				h2
					// margin: 24px 0 ;
					font-size: 30px;
					color: GrayText;
					text-transform: uppercase;
					margin-bottom: 19px;
				span
				
					color: mediumGrayText;
					font-size: 13px;
					line-height: 22px;
				a 
					display: flex;
					justift-content: center;
					align-items: center;
					width: fit-content;
					color: white;
					text-transform: uppercase;
					padding: 8px;
					height: 18px;
					font-weight: 500;
					border-radius: 5px;
					margin-top: 16px;
					background-color: fiolet;		
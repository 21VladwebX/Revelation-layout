.services
	height: 226px;
	width: 100%;
	z-index: 5;
	&-row
		display: grid;
		grid-template-rows: 100%;
		grid-template-columns: repeat(4,210px);
		grid-column-gap: 20px;
		margin-top: -24px;
		margin-left: 30px;
		z-index: 5;
		&__clm
			display: flex;
			flex-direction: column;
			z-index: 5;
			&-top
				display: flex;
				flex-direction: column;
				padding-bottom: 21px;
				border-bottom: 1px solid lightGray;
				text-align: center;
				color: fiolet;
				font-weight: 500;
				font-size: 14px;
				img
					margin: 0 auto;
					margin-bottom: 20px;
					width: 64px;
					height: 64px;
					z-index: 15;
			
			&-text
				text-align: center;
				padding-top: 16px;
				color: lightGrayText;
				line-height: 160%;
				font-size: 13.7px;